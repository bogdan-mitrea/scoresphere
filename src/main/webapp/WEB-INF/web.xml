<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>controller.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>TeamServlet</servlet-name>
        <servlet-class>controller.TeamServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeamServlet</servlet-name>
        <url-pattern>/getTeams</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ScoreServlet</servlet-name>
        <servlet-class>controller.ScoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ScoreServlet</servlet-name>
        <url-pattern>/score</url-pattern>
    </servlet-mapping>

</web-app>
